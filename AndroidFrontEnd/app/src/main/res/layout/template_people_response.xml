<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Name: "
        android:textStyle="italic"
        />
    <TextView
        android:id="@+id/ResponseTemplate_name"
        android:layout_marginLeft="55dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Raihan"
        android:textStyle="italic"
        />

    <TextView
        android:layout_below="@+id/ResponseTemplate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Phone Number: "
        android:textStyle="italic"
        />

    <TextView
        android:layout_below="@+id/ResponseTemplate_name"
        android:id="@+id/ResponseTemplate_phoneNumber"
        android:layout_marginLeft="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="01852606036"
        android:textStyle="italic"

        />

    <TextView
        android:layout_below="@+id/ResponseTemplate_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a39c9c"
        android:layout_gravity="bottom"/>




</RelativeLayout>